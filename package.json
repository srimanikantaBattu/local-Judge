{
  "name": "localjudge",
  "displayName": "LocalJudge",
  "description": "Solve all the coding challenges on various platforms locally ",
  "version": "0.0.1",
  "publisher": "srimanikantaBattu",
  "repository": {
    "type": "git",
    "url": "https://github.com/srimanikantaBattu/Local-Judge"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "localjudge-sidebar",
          "title": "LocalJudge",
          "icon": "$(code)"
        }
      ]
    },
    "views": {
      "localjudge-sidebar": [
        {
          "type": "tree",
          "id": "localjudge.welcome",
          "name": "WELCOME",
          "when": "!localjudge:isLoggedIn"
        },
        {
          "type": "tree",
          "id": "localjudge.problems",
          "name": "PROBLEMS",
          "when": "localjudge:isLoggedIn"
        },
        {
          "type": "tree",
          "id": "localjudge.profile",
          "name": "PROFILE",
          "when": "localjudge:isLoggedIn"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "localjudge.welcome",
        "contents": "Sign in to LeetCode to access problems and your profile.\n[Sign In](command:localjudge.signIn)"
      }
    ],
    "commands": [
      {
        "command": "localjudge.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "localjudge.getDailyChallenge",
        "title": "Get Daily Challenge",
        "category": "LocalJudge"
      },
      {
        "command": "localjudge.searchProblem",
        "title": "Search Problem",
        "category": "LocalJudge",
        "icon": "$(search)"
      },
      {
        "command": "localjudge.openGitHub",
        "title": "Open GitHub",
        "category": "LocalJudge",
        "icon": "$(globe)"
      },
      {
        "command": "localjudge.refreshProblems",
        "title": "Refresh Problems",
        "category": "LocalJudge",
        "icon": "$(refresh)"
      },
      {
        "command": "localjudge.signIn",
        "title": "Sign In",
        "category": "LocalJudge",
        "icon": "$(sign-in)"
      },
      {
        "command": "localjudge.signOut",
        "title": "Sign Out",
        "category": "LocalJudge",
        "icon": "$(sign-out)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "localjudge.openGitHub",
          "when": "view == localjudge.problems",
          "group": "navigation"
        },
        {
          "command": "localjudge.refreshProblems",
          "when": "view == localjudge.problems",
          "group": "navigation"
        },
        {
          "command": "localjudge.searchProblem",
          "when": "view == localjudge.problems",
          "group": "navigation"
        },
        {
          "command": "localjudge.signIn",
          "when": "view == localjudge.problems && !localjudge:isLoggedIn",
          "group": "navigation"
        },
        {
          "command": "localjudge.signOut",
          "when": "view == localjudge.problems && localjudge:isLoggedIn",
          "group": "navigation"
        }
      ]
    },
    "colors": [
      {
        "id": "localjudge.difficulty.easy",
        "description": "Color for Easy difficulty problems",
        "defaults": {
          "dark": "#00B8A3",
          "light": "#00B8A3",
          "highContrast": "#00B8A3"
        }
      },
      {
        "id": "localjudge.difficulty.medium",
        "description": "Color for Medium difficulty problems",
        "defaults": {
          "dark": "#FFC01E",
          "light": "#FFC01E",
          "highContrast": "#FFC01E"
        }
      },
      {
        "id": "localjudge.difficulty.hard",
        "description": "Color for Hard difficulty problems",
        "defaults": {
          "dark": "#FF375F",
          "light": "#FF375F",
          "highContrast": "#FF375F"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "leetcode-query": "^2.0.1"
  }
}
